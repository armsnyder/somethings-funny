[
  {
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/somethings-funny",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "portMappings": [
      {
        "hostPort": 8080,
        "protocol": "tcp",
        "containerPort": 8080
      }
    ],
    "environment": [
      {
        "name": "HOSTED_ZONE",
        "value": "${hosted_zone}"
      },
      {
        "name": "SERVICE_DOMAIN",
        "value": "${domain}"
      },
      {
        "name": "PI_DOMAIN",
        "value": "${pi_domain}"
      },
      {
        "name": "BUCKET",
        "value": "${bucket_name}"
      }
    ],
    "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/somethings-funny/service:latest",
    "name": "service"
  },
